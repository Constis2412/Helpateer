<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="670dp"
    android:layout_margin="10dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/andreea1"
    app:strokeWidth="1dp"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fullname_l"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullname_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/insertbox"
                android:padding="5pt"
                android:layout_marginHorizontal="5pt"
                android:layout_marginVertical="2pt"
                android:hint="@string/full_name"
                android:inputType="text"
                android:textColorHint="@color/white">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_l"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5pt"
                android:layout_marginHorizontal="5pt"
                android:layout_marginVertical="2pt"
                android:background="@drawable/insertbox"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/white">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_l"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:passwordToggleEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5pt"
                android:layout_marginHorizontal="5pt"
                android:layout_marginVertical="2pt"
                android:background="@drawable/insertbox"
                android:hint="@string/password"
                android:textColor="@color/white"
                android:inputType="textPassword">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cpassword_l"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:passwordToggleEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="10">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cpassword_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5pt"
                android:layout_marginHorizontal="5pt"
                android:layout_marginVertical="2pt"
                android:background="@drawable/insertbox"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:maxLength="10">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_b"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/andreea2"
            android:text="@string/register"
            android:textColor="@color/andreea1"
            android:insetTop="5dp"
            android:insetBottom="5dp"
            android:layout_marginVertical="20dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>


</LinearLayout>